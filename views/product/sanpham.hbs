<style>
  html, body
        {
            padding: 0;
            margin: 0;
            height: 100%;
            width: 100%;
        }
  .container {
    border: 1px solid black;
    padding-top: 10%;
    width: 100%;
    height: 100%;
  },
  #item1 {
    background-color: black;
    border-style: dashed;
    border-radius: 5px;
    border-width: 1px;
  },
  #table{
    overflow: scroll;
    max-height: 60%;
  }

  ,
  .item-2 {
    width: 100px;
  }
  ,
  .content{
    padding: 5px;
    border: 1px solid black;
  }

  ,
  td,
  tr {
    border: 1px solid rgb(190, 190, 190);
    padding: 10px;
  }
</style>
<div class="container">
  <div class="row">
    <div class="col-sm-9" id="body">
      <div id="table" style="overflow:scroll; height:80%;">
        <table class="table table-striped" id="customers">
          <tbody>
            {{#each product}}
            <tr id="item1">
              <td class="item-2">
                <img src="{{this.image}}" width="100" height="100" />
              </td>
              <td style="background-color:aliceblue">
                <div class="content" style="width: 200px; border: 1px solid black; border-radius: 5px; padding: 10px; ">Chủ đề</div>
              </td>
              <td
                style="width:90% ; background-color:aliceblue; border: 1px; color:black; font-weight:bolder; font-size:larger">
                {{this.detail}}</td>
              
            </tr>
            {{/each}}

          </tbody>
        </table>
      </div>

    </div>

  </div>
</div>
<script>
  const fetchAPI = async (url, option) => {
    const res = await fetch(url, option);
    return res.json();
  }
  const deleteProduct = async (id) => {
    const url = `http://localhost:3000/cpanel/product/${id}/delete`;
    const option = {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' }
    }
    try {
      const result = await fetchAPI(url, option);
      console.log('Delete result:', result);
      if (result.status) {
        window.location.reload();
      } else {
        swal("Xoa that bai!", {
          icon: "error",
        });
      }

    } catch (e) { console.log('Delete error:', e) }
  }
  const confirmDelete = (id) => {
    swal({
      title: "Are you sure?",
      text: "Ban muon xoa ?!",
      icon: "warning",
      buttons: true,
      dangerMode: true,
    })
      .then((willDelete) => {
        if (willDelete) {
          deleteProduct(id);
        }
      });
  }
</script>