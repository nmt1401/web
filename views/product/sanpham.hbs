<!DOCTYPE html>
<html lang="en">

<head>
  <title>Bootstrap 5 Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  {{!--
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script> --}}

</head>

<body class="body">
  <div class="container">
    <div class="row">
      <div class="col-sm-9" id="body">
        <div id="table" style="overflow:scroll; height:80%;">
          <table class="table table-striped" id="customers">
            <tbody>
              {{#each product}}
              <tr id="item1">
                <td class="item-2">
                  <img src="/images/{{this.image}}" width="100" height="100" />
                </td>
                <td style="background-color:aliceblue">
                  <div class="content"
                    style="width: 200px; border: 1px solid black; border-radius: 5px; padding: 10px; ">
                    {{this.name}}</div>
                </td>
                <td
                  style="width:90% ; background-color:aliceblue; border: 1px; color:black; font-weight:bolder; font-size:larger">
                  {{this.detail}}</td>
                <td>
                  <a class="btn btn-warning" href="/cpanel/product/{{this._id}}/edit">Update</a>
                  <button type="button" class="btn btn-danger" data-id="{{this._id}}" data-bs-toggle="modal"
                    data-bs-target="#xoa-baihoc">
                    Delete
                  </button>
                </td>
              </tr>

              {{/each}}

            </tbody>
          </table>
        </div>

      </div>

    </div>

  </div>
</body>
<form method="post" name="delete-form"></form>
</body>
<!-- Modal -->
<div class="modal fade" id="xoa-baihoc" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Xóa cấp học</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Bạn có muốn xóa không?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Không</button>
        <button type="button" id="xoa_ne" class="btn btn-danger">Xóa</button>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    //Code này dung JQUERY, còn cách thuần chưa biết
    var id;
    var deleteFrom = document.forms['delete-form']
    $('#xoa-baihoc').on('show.bs.modal', function (event) {
      var button = $(event.relatedTarget);
      id = button.data('id');

    })
    var xoa_ne = document.getElementById('xoa_ne')
    xoa_ne.onclick = function () {
      deleteFrom.action = `/cpanel/product/${id}/delete`
      deleteFrom.submit();
    }
  })




</script>

</html>